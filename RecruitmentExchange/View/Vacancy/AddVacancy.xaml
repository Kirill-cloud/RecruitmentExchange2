<UserControl x:Class="RecruitmentExchange.View.Vacancy.AddVacancy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecruitmentExchange.View.Vacancy" xmlns:viewmodel="clr-namespace:RecruitmentExchange.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:VacancyVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Выбор компании" />
            <ComboBox ItemsSource="{Binding Companies}" />
            <Label Content="Выбор роли" />
            <ComboBox ItemsSource="{Binding Roles}"  />
            <Label Content="Подробности" />
            <TextBox Text="{Binding Description}" />
            <Button Content="Add" Command="{Binding Add}" />
        </StackPanel>
    </Grid>
</UserControl>
