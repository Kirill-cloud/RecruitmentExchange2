<UserControl x:Class="RecruitmentExchange.View.Vacancy.EditVacancy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecruitmentExchange.View.Vacancy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Выбор компании" />
            <ComboBox ItemsSource="{Binding Companies}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedCompany}" />
            <Label Content="Выбор роли" />
            <ComboBox ItemsSource="{Binding Roles}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedRole}" />
            <Label Content="Подробности" />
            <TextBox Text="{Binding Description}" />
            <Button Content="Save" Command="{Binding AddOrEdit}" />
        </StackPanel>
    </Grid>
</UserControl>
