<UserControl x:Class="RecruitmentExchange.View.Role.EditRole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecruitmentExchange.View.Role"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150" >
            
            <Label Content="{Binding TabName}" FontSize="26" />
            <Label Content="Name" />
            <TextBox Text="{Binding Name}" />
            <Button Margin="5" Command="{Binding AddOrEdit}" >Изменить</Button>
            
        </StackPanel>
    </Grid>
</UserControl>
