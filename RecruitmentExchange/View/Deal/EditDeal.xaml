<UserControl x:Class="RecruitmentExchange.View.Deal.EditDeal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecruitmentExchange.View.Deal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="{Binding TabName}" FontSize="26" />
            <Label>Компания</Label>
            <ComboBox ItemsSource="{Binding Companies}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedCompany}" />
            <Label>Вакансия</Label>
            <ComboBox ItemsSource="{Binding Vacancies}" DisplayMemberPath="Description" SelectedItem="{Binding SelectedVacancy}" />
            <Label>Соискатель</Label>
            <ComboBox ItemsSource="{Binding Applicants}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedApplicant}" />
            
            <Button Command="{Binding AddOrEdit}" >Сохранить</Button>
        </StackPanel>
    </Grid>
</UserControl>
