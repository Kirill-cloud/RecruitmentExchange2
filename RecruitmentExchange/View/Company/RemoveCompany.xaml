<UserControl x:Class="RecruitmentExchange.View.Company.RemoveCompany"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecruitmentExchange.View.Company" xmlns:viewmodel="clr-namespace:RecruitmentExchange.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:CompanyVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" >Будет удалено также</Label>
            <WrapPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding VacancyCount}" />
                <TextBlock Text=" связанных вакансий" />
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" >
            <Button Margin="5" Command="{Binding Remove}" >Продолжить</Button>
            <Button Margin="5" Command="{Binding Cancel}" >Отменить</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
