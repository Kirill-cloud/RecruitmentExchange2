<UserControl x:Class="MVVM.AddEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="100,30"  MinWidth="100" >
            <Label Content="{Binding TabName}" FontSize="26" />
            <Label Content="Name" />
            <TextBox Text="{Binding Name}" />
            <Label Content="Focus" />
            <TextBox Text="{Binding Focus}" />
            <Label Content="Addres" />
            <TextBox Text="{Binding Address}" />
            <Label Content="Phone" />
            <TextBox Text="{Binding Phone}" />
        </StackPanel>
        <Button VerticalAlignment="Bottom" Width="100" Margin="30" Command="{Binding AddOrEdit}" >Сохранить</Button>
    </Grid>
</UserControl>
